{
    "version": 2,
    "builds": [
      {
        "src": "server/index.js",
        "use": "@vercel/static-node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "client/build" }
      }
    ],
    "routes": [
      {
        "src": "/auth/(.*)",
        "dest": "./index.js"
      },
      {
        "src": "/(.*)",
        "dest": "client/build/index.html"
      }
    ]
  }
  